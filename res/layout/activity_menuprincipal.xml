<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.projet_villo.MenuPrincipal" >

    <Button
        android:id="@+id/deconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:onClick="gestDeconnexion"
        android:text="Se deconnecter" />

    <Button
        android:id="@+id/mesReservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deconnexion"
        android:layout_alignLeft="@+id/deconnexion"
        android:layout_marginBottom="26dp"
        android:onClick="gestMesReservations"
        android:text="Mes réservations" />

    <Button
        android:id="@+id/localiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mesReservations"
        android:layout_alignLeft="@+id/mesReservations"
        android:layout_marginBottom="27dp"
        android:onClick="gestLocalisation"
        android:text="Se localiser" />

    <Button
        android:id="@+id/reserver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/localiser"
        android:layout_alignLeft="@+id/localiser"
        android:layout_marginBottom="33dp"
        android:onClick="gestReserver"
        android:text="Réserver un vélo" />
    
    </RelativeLayout>
